    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "nodemailer": "^6.9.8",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "date-fns": "^3.0.6",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.12",
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.2.5"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "client": "npm run dev --prefix ../Client",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "logs:view": "tail -f logs/combined-$(date +%Y-%m-%d).log",
    "logs:error": "tail -f logs/error-$(date +%Y-%m-%d).log",
    "db:seed": "node scripts/seedDatabase.js",
    "db:backup": "node scripts/backupDatabase.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "build": "echo 'No build step required for Node.js server'",
    "postinstall": "echo 'UOD Gaming Server dependencies installed successfully!'"
  },
  "keywords": [
    "gaming",
    "online",
    "platform",
    "mern",
    "nodejs",
    "express",
    "mongodb",
    "socket.io",
    "real-time",
