{
  "name": "uod-gaming-client",
  "version": "2.0.0",
  "description": "UOD Gaming - Ultimate Gaming Platform Frontend",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "clean": "rm -rf dist node_modules/.vite",
    "postinstall": "echo 'UOD Gaming Client dependencies installed successfully!'"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.24.1",
    "axios": "^1.7.2",
    "socket.io-client": "^4.7.4",
    "framer-motion": "^12.23.7",
    "lucide-react": "^0.525.0",
    "react-intersection-observer": "^9.16.0",
    "react-spring": "^10.0.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "aos": "^2.3.4",
    "date-fns": "^3.0.6",
    "react-hook-form": "^7.52.1",
    "react-query": "^3.39.3",
    "zustand": "^4.5.4",
    "react-hot-toast": "^2.4.1",
    "react-helmet-async": "^2.0.5",
    "react-error-boundary": "^4.0.13",
    "react-lazyload": "^3.2.1",
    "react-virtualized": "^9.22.5",
    "lodash-es": "^4.17.21",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^5.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^24.1.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "sass": "^1.77.6",
    "vite-bundle-analyzer": "^0.10.1",
    "vite-plugin-pwa": "^0.20.0",
    "workbox-window": "^7.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "gaming",
    "react",
    "vite",
    "frontend",
    "gaming-platform",
    "real-time",
    "multiplayer"
  ],
  "author": {
    "name": "UOD Gaming Team",
    "email": "omshrikhande73@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/uod-gaming/uod-gaming-platform.git"
  }
}